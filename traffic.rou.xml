<routes>
    <!-- Тип машины: модель Krauss, ускорение, торможение -->
    <vType id="std_car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="16.6" guiShape="passenger" carFollowModel="Krauss"/>

    <!-- Маршруты -->
    <route id="route_NS" edges="n_to_c c_to_s"/>
    <route id="route_SN" edges="s_to_c c_to_n"/>
    <route id="route_WE" edges="w_to_c c_to_e"/>
    <route id="route_EW" edges="e_to_c c_to_w"/>

    <!-- ГЕНЕРАЦИЯ ПОТОКА (Исправлено) -->
    
    <!-- Главная дорога: ПЛОТНО (каждые 2 секунды) -->
    <!-- Убрали number="..." -->
    <flow id="f_NS" type="std_car" route="route_NS" begin="0" end="3600" period="2"/>
    <flow id="f_SN" type="std_car" route="route_SN" begin="0" end="3600" period="2"/>

    <!-- Второстепенная дорога: ПУСТО (каждые 20 секунд) -->
    <flow id="f_WE" type="std_car" route="route_WE" begin="0" end="3600" period="20"/>
    <flow id="f_EW" type="std_car" route="route_EW" begin="0" end="3600" period="20"/>
</routes>